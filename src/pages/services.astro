---
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

import { SITE } from "@data/constants";
import RightServices from "@/components/ui/blocks/RightServices.astro";
import LeftServices from "@/components/ui/blocks/LeftServices.astro";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  image: string;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Design Graphique",
    subTitle:
      "Notre entreprise de télécommunication propose un service de conception design innovant, spécifiquement adapté aux besoins des petites et moyennes entreprises (PME). Nous nous engageons à transformer vos idées en solutions visuelles captivantes et fonctionnelles.",
    single: false,
    image: "",
  },
  {
    isRightSection: false,
    title: "Couverture Événementielle pour PME",
    subTitle:
      "Nous proposons un service de couverture évementielle complet, conçu pour mettre en valeur vos événements et maximiser leur impact. Spécialement adapté aux petites et moyennes entreprises (PME), notre service garantit une visibilité accrue et un engagement renforcé.",
    image: "",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Élaboration de Plans d'Affaires pour PME et Particuliers",
    subTitle:
      "Nous offrons un service complet d'élaboration de plans d'affaires, conçu pour guider les petites et moyennes entreprises (PME) ainsi que les particuliers vers le succès. Nous transformons vos idées en plans concrets et stratégiques, adaptés à vos besoins spécifiques.",
    single: false,
    image: "",
  },
  {
    isRightSection: false,
    title: "Impression sur Différents Supports pour PME et Particuliers",
    subTitle:
      "Nous proposons un service d'impression polyvalent, conçu pour répondre aux besoins variés des petites et moyennes entreprises (PME) ainsi que des particuliers. Nous transformons vos concepts en supports tangibles de haute qualité, adaptés à chaque occasion.",
    image: "",
  },
  {
    isRightSection: true,
    title: "Création de Sites Internet pour PME et Particuliers",
    subTitle:
      "Nous proposons la création de sites internet sur mesure, conçu pour répondre aux besoins des petites et moyennes entreprises (PME) ainsi que des particuliers. Nous vous aidons à établir une présence en ligne professionnelle et attrayante.",
    single: false,
    image: "",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://",
    url: "https://",
    name: "Expert Consultation Services | ScrewFast",
    description:
      "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk",
      name: "ScrewFast",
      description:
        "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Unir l'expertise à votre vision"
    subTitle="Chez Bkmbusiness, nous sommes fiers de fournir des solutions complètes et un service exceptionnel dans le secteur de la télécommunication. Notre équipe expérimentée se consacre à l'accompagnement de votre projet du début à la fin grâce à une gamme de services spécialisés."
    btnExists={true}
    btnTitle="Contactez-nous"
    btnURL="/contact"
  />

  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightServices
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftServices
          title={article.title}
          subTitle={article.subTitle}
          image="/images/services/"
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="By the Numbers"
    subTitle="Notre engagement en faveur de la qualité et de la fiabilité est évident dans chaque projet que nous entreprenons."
    mainStatTitle="96%"
    mainStatSubTitle="Nos clients considèrent leur expérience avec  Bkmbusiness comme exceptionnelle."
    stats={[
      {
        stat: "+30",
        description: "Projets clients",
      },
      {
        stat: "+50",
        description: "Clients satisfaits",
      },
      {
        stat: "+5",
        description: "Année d'éxperiences",
      },
    ]}
  />
</MainLayout>
