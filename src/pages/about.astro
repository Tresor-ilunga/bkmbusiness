---
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

import { SITE } from "@data/constants";
import LeftAbout from "@/components/ui/blocks/LeftAbout.astro";
import RightAbout from "@/components/ui/blocks/RightAbout.astro";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: false,
    title: "À propos",
    subTitle:
      "Nous proposons un service de couverture évementielle complet, conçu pour mettre en valeur vos événements et maximiser leur impact. Spécialement adapté aux petites et moyennes entreprises (PME), notre service garantit une visibilité accrue et un engagement renforcé.",
    btnExists: true,
    btnTitle: "Contactez-nous",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Mission",
    subTitle:
      "Notre mission est d'apporter un développement aux petites et moyennes entreprises ainsi qu'aux activités innovantes des particuliers en visant une nouvelle perspective de cette dernière dans le monde.",
    single: false,
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout title={pageTitle}>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Unir l'expertise à votre vision"
    subTitle="Chez Bkmbusiness, nous sommes fiers de fournir des solutions complètes et un service exceptionnel dans le secteur de la télécommunication. Notre équipe expérimentée se consacre à l'accompagnement de votre projet du début à la fin grâce à une gamme de services spécialisés."
  />

  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightAbout
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftAbout
          title={article.title}
          subTitle={article.subTitle}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Des Résultats Mesurables"
    subTitle="Notre engagement en faveur de la qualité et de la fiabilité est évident dans chaque projet que nous entreprenons."
    mainStatTitle="96%"
    mainStatSubTitle="Nos clients considèrent leur expérience avec  Bkmbusiness comme exceptionnelle."
    stats={[
      {
        stat: "+30",
        description: "Projets clients",
      },
      {
        stat: "+50",
        description: "Clients satisfaits",
      },
      {
        stat: "+5",
        description: "Année d'éxperiences",
      },
    ]}
  />
</MainLayout>
